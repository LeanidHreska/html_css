@import "../main.styl"

$color-title = #6a6a6a
$color-text = #999999

.about-us
  width: $page-width
  margin: 0 auto
  display: flex
  justify-content: space-between
  align-items: center
  font-family: $font-family-title
  min-height: 700px

  &__image
    margin-left: 40px

  &__content
    width: 50%
    min-height: 400px
    display: flex
    flex-direction: column
    justify-content: space-between

  &__title
    border-left: 5px solid $color-element-primary
    color: $color-title
    text-transform: uppercase
    font-size: $h2-font-size
    padding-left: 27px
    letter-spacing: 4px
    font-weight: bold

  &__text
    color: $color-text
    line-height: 2
    margin: 10px 0

@media (max-width: $md)
  .about-us
    flex-direction: column
    min-height: 500px
    width: $page-width-mobile
    padding: 10px 0;

    &__title
      font-size: $h3-font-size
    
    &__content
      margin-top: 20px
      width: 100%;


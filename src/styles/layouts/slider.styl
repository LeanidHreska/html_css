@import "../main.styl"

.slider
  color: $color-white
  text-align: center
  display: flex
  justify-content: space-around
  align-items: center

  &__arrow
    button($color-dark-gray, 45px, 45px)
    font-size: $h3-font-size
    line-height: 45px
    border: none
    background-color: $color-gray
    position: relative
    bottom: 50px

    &_left
      left: 20px
    
    &_right
      right: 20px

  &__arrow:hover
  &__arrow:focus
    background-color: $color-red
    color: $color-white
    cursor: pointer

  &__sub-title
    font-family: $font-family-sans-pro
    font-size: $h3-font-size

  &__title
    font-family: $font-family-open-sans
    font-size: $h1-font-size
    text-transform: uppercase
    margin-top: 35px
    letter-spacing: 5px
    word-spacing: 20px

  &__button
    button()

    &_margin-left
      margin-left: 12px
    &_margin-right
      margin-right: 12px

  &__button:hover
  &__button:focus
    background-color: $color-red
    cursor: pointer

  &__divider
    display: flex
    justify-content: center
    align-items: center
    margin: 30px 0 40px

  &__red-circle
    height: 10px
    width: 10px
    background-color: $color-red
    border-radius: 50%
    margin: 0 10px

  &__white-stripe
    height: 1px
    width: 5%
    background-color: $color-white
  
  &__content
    width: 85%

  &__sub-content
    width: 45%
    margin: 0 auto
    font-family: $font-family-sans-pro
    line-height: 1.4
    font-size: $h5-font-size

  &__buttons
    margin-top: 70px

@media screen and (max-width: $md)
  .slider
    &__sub-content
      width: 75%

@media screen and (max-width: $sm)
  .slider
    margin-top: 100px

    &__title
      font-size: $h2-font-size

    &__sub-title
      font-size: $h4-font-size

    &__sub-content
      width: 90%

@media screen and (max-width: $xs)
  .slider
    margin-top: 0

    &__sub-content
      width: 85%

    &__buttons
      margin-top: 15px
    
    &__button
      margin: 5px 0

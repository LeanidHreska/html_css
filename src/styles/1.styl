@import "main";

.team-member
  display: flex
  flex-direction: column
  align-items: center
  position: relative;


  background-color: black

  &__image
    width: 58px
    height: 58px
    border-radius: 50%
    border: 4px solid $color-element-primary
    transition: .3s
    position: absolute


  &__white-stripe
    height 120px
    width: 1px
    background-color: #fff

  &__name
    font-size: $h2-font-size 
    font-family: $font-family-title
    color: $color-element-primary
    visibility: hidden

  &:hover
    .team-member
      &__image
        width: 80px
        height: 80px
        box-shadow: 0px 0px 28px 0px rgba(0,0,0,0.75)
        transform: translateY(-20px)
      
      &__name
        visibility: visible

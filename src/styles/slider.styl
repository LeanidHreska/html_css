@import "variables.styl"
@import "mixins/button.styl"

.slider
  color: $color-white;
  text-align: center;
  display: flex;
  justify-content: space-around;
  margin-top: 200px;
  align-items: center;

  &__arrow
    width: 40px;
    height: 40px;
    background-color: $color-gray;
    font-size: 25px;
    line-height: 42px;
    color: $color-dark-gray;
    border-radius: 2px;
    transition: color .2s ease-in-out, background-color .2s ease-in-out;

  &__arrow:hover
    background-color: $color-red;
    color: $color-white;
    cursor: pointer;

  &__sub-title
    font-family: $font-family-sans-pro;
    font-size: 27px;

  &__title
    font-family: $font-family-open-sans;
    font-size: 74px;
    text-transform: uppercase;
    margin-top: 40px;
    letter-spacing: 5px;

  &__button
    button()

  &__divider
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 30px 0 40px;

  &__red-circle
    height: 10px;
    width: 10px;
    background-color: $color-red;
    border-radius: 50%;
    margin: 0 10px;


  &__white-stripe
    height: 1px;
    width: 5%;
    background-color: $color-white;
  
  &__content
    width: 37%;
    margin: 0 auto;
    font-family: $font-family-sans-pro;
    line-height: 1.4;
    font-size: 16px;

  &__buttons
    margin-top: 70px;

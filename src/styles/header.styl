@import "variables.styl"

.header
  background-image: url('images/header__background.jpeg');
  height: 991px;
  position: relative;

  &__background-blackout
    background-color: rgba(0, 0, 0, 0.7);
    height: inherit;
    position: relative;
    overflow: hidden;

  &__left-side-corner, &__right-side-corner
    position: absolute;
    bottom: 0;
    width: 50%;
    height: 0;
    border-bottom: 124px solid $color-white; 


  &__left-side-corner
    border-right: 50vw solid transparent;

  &__right-side-corner 
    right: 0;
    border-left: 50vw solid transparent;

  &__anchor
    height: 50px;
    width: 50px;
    background-color: $color-gray-light;
    position: absolute;
    bottom: -25px;
    left: calc(50vw - 25px);
    background-clip: padding-box;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    color: $color-red;
    transition: color .2s ease-in-out, background-color .2s ease-in-out; 


  &__anchor:hover
    color: $color-white;
    background-color: $color-red;
    cursor: pointer;

